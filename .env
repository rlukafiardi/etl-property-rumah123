# .env file for Airflow and ETL project configuration
# AIRFLOW CORE SETTINGS
# Executor type: choose between LocalExecutor or CeleryExecutor
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Disable Airflow's example DAGs
AIRFLOW__CORE__LOAD_EXAMPLES=False

# AIRFLOW DATABASE CONFIGURATION
# PostgreSQL database used by Airflow
AIRFLOW_DB_HOST=airflow-db
AIRFLOW_DB_PORT=5432
AIRFLOW_DB_EXPOSE_PORT=5434  # Exposed port for host access (e.g. via pgAdmin or CLI)
AIRFLOW_DB_NAME=airflow
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=airflow1234

# SQLAlchemy connection string for Airflow metadata DB
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${AIRFLOW_DB_USER}:${AIRFLOW_DB_PASSWORD}@${AIRFLOW_DB_HOST}:${AIRFLOW_DB_PORT}/${AIRFLOW_DB_NAME}

# AIRFLOW WEBSERVER & ADMIN 
# Airflow webserver port
AIRFLOW_WEBSERVER_PORT=8080

# Default admin user credentials (created via airflow-init)
AIRFLOW_ADMIN_USERNAME=airflow
AIRFLOW_ADMIN_PASSWORD=airflow1234
AIRFLOW_ADMIN_FIRSTNAME=Airflow
AIRFLOW_ADMIN_LASTNAME=Admin
AIRFLOW_ADMIN_EMAIL=airflow@airflow.com

# AIRFLOW SCHEDULER CONFIG
# How often (in seconds) the scheduler checks for new DAGs
AIRFLOW__SCHEDULER__DAG_DIR_LISTING_INTERVAL=60

# ETL DATABASE
# PostgreSQL database for storing ETL data (separate from Airflow metadata DB)
ETL_DB_HOST=etl-db
ETL_DB_PORT=5432
ETL_DB_EXPOSE_PORT=5433  # Exposed port for host access
ETL_DB_NAME=etl-db
ETL_DB_USER=airflow
ETL_DB_PASSWORD=airflow1234

# Airflow connection string to the ETL PostgreSQL database
AIRFLOW_CONN_POSTGRES_ETL_DB=postgresql+psycopg2://${ETL_DB_USER}:${ETL_DB_PASSWORD}@${ETL_DB_HOST}:${ETL_DB_PORT}/${ETL_DB_NAME}


# PGADMIN CONFIG
# Login credentials for pgAdmin UI
PGADMIN_EMAIL=airflow@example.com
PGADMIN_PASSWORD=airflow1234

# pgAdmin web interface port
PGADMIN_PORT=5050
